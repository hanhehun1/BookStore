@model BookStore.Models.Category
@{
    ViewBag.Title = "CreateCategory";
}

<h2>Create Category</h2>
@Html.ActionLink("Back", "CategoryView", "Admin", null, new { @class = "btn btn-primary" })
<br />
<br />

@using (Html.BeginForm("CreateCategory", "Admin", "POST"))
{
    <div class="col-md-14">
        <div class="form-group">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.Label("Category Name:", new { @class = "text-default" })
            @Html.TextBoxFor(m => m.CategoryName, new { @placeholder = "Enter The Category Name", @class = "form-default" })
            @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
            <br />
            <br />
            <input type="submit" class="btn btn-success" value="Create" />
        </div>
        <br />

    </div>
}