@model BookStore.Models.Category
@{
    ViewBag.Title = "EditCategory";
}

<h2>EditCategory</h2>
@Html.ActionLink("Back To Book", "BookManage", "Admin", null, new { @class = "btn btn-primary" })
<br>
@using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.CategoryName, new { @class = "form-control" })
            <br />
            @Html.ValidationMessageFor(model => model.CategoryName, " *required", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Edit" />
        </div>
    </div>
}